<div class="container bg">
  <div class="row">
    <div class="center col-sm-12">
      <h1>Eat Da Burgers!</h1>
      <img src="assets/img/burger.png" class="center" alt="Eat-Da-Burger App">
        <h2>Our World Class Burgers Menu</h2>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
            {{/unless}}
          {{/each}}
        </ul>
        <h2>Devoured List</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devour=false}}
            {{/if}}
          {{/each}}
        </ul>

        <h2>Add a New Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="ba">Burger Name:</label>
            <input type="text" id="ba" name="name">
            <br>
            <button type="submit">Add Burger</button>
          </div>
        </form>
    </div>
  </div>
</div>

